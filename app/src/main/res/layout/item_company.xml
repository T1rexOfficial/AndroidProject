<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:id="@+id/item_company_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="48dp"
            android:elevation="0dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            android:layout_height="48dp">

        <ImageView
                android:id="@+id/photoCompanyImageView"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_group_black"
                android:tint="@color/white"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/item_company_title"
            app:layout_constraintLeft_toRightOf="@id/item_company_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/city_item_company"
            app:layout_constraintTop_toBottomOf="@id/item_company_title"
            app:layout_constraintLeft_toRightOf="@id/item_company_cardview"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Almaty"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>